<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ipal.itu.harzindagi.Activities.DashboardActivity"
    tools:showIn="@layout/activity_dashboard"
    android:orientation="vertical">

    <com.andexert.library.RippleView
        android:id="@+id/dashBoardActivityRegisterChildButtonR"
        rv_centered="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        app:rv_color="@color/rp_color"
        app:rv_rippleDuration="@integer/rp_duration"
        app:rv_zoom="true">
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="بچے کو رجسٹر کریں"
        android:id="@+id/dashBoardActivityRegisterChildButton"
        android:layout_weight=".2"
        android:layout_gravity="center"
        android:background="@drawable/roundbutton"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        />
    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:id="@+id/dashBoardActivityScanChildButtonR"
        rv_centered="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        app:rv_color="@color/rp_color"
        app:rv_rippleDuration="@integer/rp_duration"
        app:rv_zoom="true">
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="کارڈ سکین کریں"
        android:id="@+id/dashBoardActivityScanChildButton"

        android:layout_gravity="center"
        android:background="@drawable/roundbutton"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />
    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:id="@+id/dashBoardActivitySearchChildButtonR"
        rv_centered="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        app:rv_color="@color/rp_color"
        app:rv_rippleDuration="@integer/rp_duration"
        app:rv_zoom="true">
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=" بچے کو تلاش کریں"
        android:id="@+id/dashBoardActivitySearchChildButton"

        android:layout_gravity="center"
        android:background="@drawable/roundbutton"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />
    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:id="@+id/dashBoardActivityShowAllChildrenButtonR"
        rv_centered="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        app:rv_color="@color/rp_color"
        app:rv_rippleDuration="@integer/rp_duration"
        app:rv_zoom="true">
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="یوسی   کے سارے بچوں کا ریکارڈ"
        android:id="@+id/dashBoardActivityShowAllChildrenButton"
        android:layout_gravity="center"
        android:background="@drawable/roundbutton"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />
    </com.andexert.library.RippleView>
</LinearLayout>
