<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:padding="@dimen/standard_padding"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ipal.itu.harzindagi.Activities.RegisterChildActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ChildPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_height">

                    <TextView
                        android:id="@+id/ChildEPINumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="ای پی ائی نمبر"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ChildEpiNumberText"
                        android:layout_width="@dimen/text_wed"
                        android:layout_height="@dimen/text_he"
                        android:background="@drawable/border_black"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="103"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_height">

                    <TextView
                        android:id="@+id/ChildBookNumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text=" کتاب کا نمبر"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ChildBookNumber"
                        android:layout_width="@dimen/text_wed"
                        android:layout_height="@dimen/text_he"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/border_black"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="132"

                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_height">

                    <TextView
                        android:id="@+id/ChildNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="بچے کا نام"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ChildName"
                        android:layout_width="@dimen/text_wed"
                        android:layout_height="@dimen/text_he"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"

                        android:text="Asad"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_height">

                    <TextView
                        android:id="@+id/ChildGenderText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="جنس "
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ChildGender"
                        android:layout_width="@dimen/text_wed"
                        android:layout_height="@dimen/text_he"
                        android:background="@drawable/edit_text_border"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="Male"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_height">

                    <TextView
                        android:id="@+id/ChildDOBText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="تاریخ پیدائش "
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ChildDOB"
                        android:layout_width="@dimen/text_wed"
                        android:layout_height="@dimen/text_he"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="02-07-2015"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_height">

                    <TextView
                        android:id="@+id/ChildGuardianNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="سرپرست کا نام "
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ChildGuardianName"
                        android:layout_width="@dimen/text_wed"
                        android:layout_height="@dimen/text_he"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="Amjad Ali"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/ChildMotherNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="ماں کا نام :"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ChildMotherName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/ChildMotherNameText"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Aysha"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_gray"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_height">

                    <TextView
                        android:id="@+id/ChildGuardianMobileNumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="فون نمبر "
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ChildGuardianMobileNumber"
                        android:layout_width="@dimen/text_wed"
                        android:layout_height="@dimen/text_he"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"

                        android:text="0321-4180974"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"  />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_height">

                    <TextView
                        android:id="@+id/ChildGuardianCNICText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="شناختی کارڈ نمبر "
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ChildGuardianCNIC"
                        android:layout_width="@dimen/text_wed"
                        android:layout_height="@dimen/text_he"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="5dp"
                        android:text="35201-7888788-9"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_height">

                    <TextView
                        android:id="@+id/nxtDueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="اگلی بارآنےکی تاریخ"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/nxtDatetxt"
                        android:layout_width="@dimen/text_wed"
                        android:layout_height="@dimen/text_he"
                        android:background="@drawable/edit_text_border"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"  />
                </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/red"
    android:id="@+id/six_time"
    android:textSize="17sp"
    android:visibility="gone"/>

                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_border" />
                <Button
                    android:id="@+id/edit_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundbutton"
                    android:text="@string/edid_data"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:background="@drawable/roundbuttonred"
                        android:textColor="@color/white"
                        android:text="ڈیٹا ختم کریں"
                        android:visibility="visible"
                        android:id="@+id/delte_child"/>

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</ScrollView>
