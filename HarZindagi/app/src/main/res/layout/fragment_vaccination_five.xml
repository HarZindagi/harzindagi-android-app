<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ipal.itu.harzindagi.Fragments.VaccinationFiveFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color"
            android:padding="@dimen/standard_padding"
            android:paddingLeft="16dp"
            android:paddingTop="55dp"
            android:paddingBottom="55dp"
            >
            <TextView
                android:id="@+id/Measles_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingLeft="10dp"
                android:text="Measles-1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4d4d4d"
                android:textSize="17dp" />




            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/customdrawablecheckbox"

                android:text=""

                android:gravity="center|center_vertical"
                android:id="@+id/Measles_chk"
                android:paddingRight="10dp"
                />

        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/v5_sp1"
            android:visibility="invisible"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/btn_v5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Button_Theme_color"
            android:textColor="@color/white"
            android:text="تصویر کھینچنا"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            />


    </LinearLayout>

</FrameLayout>
