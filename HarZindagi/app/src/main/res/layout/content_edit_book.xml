<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ipal.itu.harzindagi.Activities.RegisterChildActivity"
    tools:showIn="@layout/activity_edit_book">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">


            <TextView
                android:id="@+id/registerChildUCNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/registerChildUCNumber_TV"
                android:gravity="center"
                android:inputType="number"
                android:nextFocusDown="@+id/registerChildEPICenterName"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/registerChildUCNumber_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="ای پی آئی نمبر"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:visibility="gone">

            <TextView
                android:id="@+id/registerChildEPICenterName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/registerChildEPICenterName_TV"
                android:layout_weight=".10"
                android:gravity="center"
                android:hint=""
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/registerChildEPICenterName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="سینٹر کا نام"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >

            <EditText
                android:id="@+id/registerChildName"
                android:layout_width="@dimen/text_wed"
                android:layout_height="@dimen/text_he"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_weight=".10"
                android:background="@drawable/edit_text_border"
                android:gravity="left|center"

                android:hint=""

                android:inputType="textCapWords"
                android:singleLine="true" />

            <TextView
                android:id="@+id/registerChildName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="صحیح کتاب نمبر درج کریں"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:visibility="gone"

            >

            <TextView
                android:id="@+id/ChildGender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/ChildGenderText"
                android:layout_weight=".10"
                android:gravity="center"
                android:hint=""
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ChildGenderText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="جنس"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:visibility="gone"

            >

            <TextView
                android:id="@+id/registerChildDOB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:gravity="center|right"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:text="تاریخ پیدائش"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/registerChildDOBText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="DD/MM/YYYY"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:visibility="gone"

            >

            <TextView
                android:id="@+id/registerChildGuardianName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/registerChildGuardianName_TV"
                android:layout_weight=".10"
                android:gravity="center"

                android:hint=""

                android:inputType="textCapWords"
                android:singleLine="true"
                android:textSize="20dp" />


            <TextView

                android:id="@+id/registerChildGuardianName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="سرپرست کا نام"
                android:textColor="@android:color/black"
                android:textSize="20dp" />


        </RelativeLayout>







        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:visibility="gone"

            >

            <TextView
                android:id="@+id/registerChildMotherName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/registerChildMotherName_TV"
                android:layout_weight=".10"
                android:gravity="center"
                android:hint=""
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/registerChildMotherName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="والدہ کا نام"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:visibility="gone"

            >


            <TextView
                android:id="@+id/registerChildTown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="علاقہ کانام"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/registerChildTown_ET"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/registerChildTown"
                android:layout_toStartOf="@+id/registerChildTown"
                android:gravity="center"
                android:hint=""
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:visibility="gone">


            <TextView
                android:id="@+id/registerChildAddressTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="گھر کا پتہ"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/registerChildAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_toLeftOf="@+id/registerChildAddressTV"
                android:layout_toStartOf="@+id/registerChildAddressTV"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/registerEditChildRecord"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundbutton"
            android:text="اپ ڈیٹ کریں"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>
</ScrollView>