<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ipal.itu.harzindagi.Activities.RegisterChildActivity"
    tools:showIn="@layout/activity_edit_book">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp">
        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ChildPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height">

            <TextView
                android:id="@+id/ChildEPINumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="ای پی ائی نمبر"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ChildEpiNumberText"
                android:layout_width="@dimen/text_wed"
                android:layout_height="@dimen/text_he"
                android:background="@drawable/border_black"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="103"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height">

            <TextView
                android:id="@+id/ChildNameText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="بچے کا نام"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ChildName"
                android:layout_width="@dimen/text_wed"
                android:layout_height="@dimen/text_he"
                android:background="@drawable/edit_text_border"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"

                android:text="Asad"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >

            <EditText
                android:id="@+id/book_number_et"
                android:layout_width="150dp"
                android:layout_height="@dimen/text_he"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_weight=".10"
                android:background="@drawable/edit_text_border"
                android:gravity="left|center"
                android:hint=""
                android:inputType="number"
                android:singleLine="true" />

            <TextView
                android:id="@+id/registerChildName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="صحیح کتاب نمبر درج کریں"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

        </RelativeLayout>


        <Button
            android:id="@+id/registerEditChildRecord"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundbutton"
            android:text="اپ ڈیٹ کریں"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>
</ScrollView>