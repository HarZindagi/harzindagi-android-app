<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.HomeActivity"
    tools:showIn="@layout/activity_home">

    <com.andexert.library.RippleView
        android:id="@+id/homeActivitykidstationiButtonR"
        rv_centered="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        app:rv_color="@color/rp_color"
        app:rv_rippleDuration="@integer/rp_duration"
        app:rv_zoom="true">

        <Button
            android:id="@+id/homeActivitykidstationiButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:background="@drawable/roundbutton"

            android:text="کٹ اسٹیشن"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/homeActivityHarZindagiButtonR"
        rv_centered="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        app:rv_color="@color/rp_color"
        app:rv_rippleDuration="@integer/rp_duration"
        app:rv_zoom="true">

        <Button
            android:id="@+id/homeActivityHarZindagiButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:background="@drawable/roundbutton"
            android:text="ہر زندگی"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/homeActivityEVACCSButtonR"
        rv_centered="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:rv_color="@color/rp_color"
        app:rv_rippleDuration="@integer/rp_duration"
        app:rv_zoom="true">

        <Button
            android:id="@+id/homeActivityEVACCSButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/roundbutton"
            android:text="EVACCS"
            android:textColor="@color/white"

            android:textSize="22sp" />
    </com.andexert.library.RippleView>

</LinearLayout>
