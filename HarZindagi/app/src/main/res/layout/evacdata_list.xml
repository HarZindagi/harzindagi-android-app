<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight=".65"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/listActivityRowImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/paceholder" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".35"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/listActivityRowAddress"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_black"
                android:gravity="center"
                android:maxLength="25"
                android:text=""
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/houseAddressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ای پی آئی نمبر"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/listActivityRowGuardianName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_black"
                android:gravity="center"
                android:text=""

                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ویکسینیشن"
                android:textColor="@color/black"
                android:textStyle="italic" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>