<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ipal.itu.harzindagi.Activities.RegisterChildActivity"
    tools:showIn="@layout/activity_register_child"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"

        >


    <EditText
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent"
        android:id="@+id/registerChildUCNumber"
        android:layout_gravity="left|center_horizontal"

        android:layout_toLeftOf="@+id/registerChildUCNumber_TV"
        android:background="@android:color/transparent"



        android:layout_marginRight="5dp"
        android:singleLine="true"
        android:paddingLeft="16dp" />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="یو سی نمبر"
        android:layout_alignParentRight="true"
        android:id="@+id/registerChildUCNumber_TV"

        android:textSize="25dp"
        android:gravity="right|center"
        android:layout_gravity="right|center_horizontal"
        />
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"

        >
    <EditText


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/registerChildEPICenterName"
        android:layout_gravity="left|center_horizontal"

        android:background="@android:color/transparent"


        android:hint=""
        android:layout_toLeftOf="@+id/registerChildEPICenterName_TV"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"

        android:singleLine="true"

        android:layout_weight=".10"
        android:paddingLeft="16dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="سینٹر کا نام"
            android:layout_alignParentRight="true"
            android:id="@+id/registerChildEPICenterName_TV"

            android:textSize="25dp"
            android:gravity="right|center"
            android:layout_gravity="right|center_horizontal"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"

        >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/registerChildName"
        android:layout_gravity="center_horizontal"
        android:hint=""
        android:background="@android:color/transparent"

        android:singleLine="true"

        android:layout_toLeftOf="@+id/registerChildName_TV"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"

        android:layout_weight=".10"
        android:gravity="left|center"
        android:paddingLeft="16dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="بچے کا نام"
            android:layout_alignParentRight="true"
            android:id="@+id/registerChildName_TV"
            android:textSize="25dp"
            android:gravity="right|center"
            android:layout_gravity="right|center_horizontal"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight=".1">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/registerbuttonborder"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            android:text="لڑکا"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/registerChildSexMale" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/registerbuttonborder"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:text="لڑکی"
            android:textSize="20dp"
            android:textStyle="bold"
            android:focusable="false"
            android:id="@+id/registerChildSexFemale" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerChildDOB"
        android:layout_gravity="center_horizontal"
        android:hint="تاریخ پیدائش"
        android:layout_weight=".10"
        android:textSize="25dp"
        android:gravity="right|center"
        android:background="@android:color/transparent"
        android:paddingLeft="16dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"

        >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/registerChildMotherName"
        android:layout_gravity="center_horizontal"
        android:hint=""
        android:background="@android:color/transparent"

        android:singleLine="true"

        android:layout_toLeftOf="@+id/registerChildMotherName_TV"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"

        android:layout_weight=".10"
        android:paddingLeft="16dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="والدہ کا نام"
            android:layout_alignParentRight="true"
            android:id="@+id/registerChildMotherName_TV"
            android:textSize="25dp"
            android:gravity="right|center"
            android:layout_gravity="right|center_horizontal"
            />

</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/registerChildGuardianName"
            android:layout_gravity="center_horizontal"
            android:hint=""
            android:background="@android:color/transparent"

            android:singleLine="true"

            android:layout_toLeftOf="@+id/registerChildGuardianName_TV"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"

            android:layout_weight=".10"
            android:paddingLeft="16dp" />



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="سرپرست کا نام"
            android:layout_alignParentRight="true"
            android:id="@+id/registerChildGuardianName_TV"
            android:textSize="25dp"
            android:gravity="right|center"
            android:layout_gravity="right|center_horizontal"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:orientation="vertical"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="سرپرست کا شناختی کارڈ کا نمبر"
            android:layout_alignParentRight="true"
            android:id="@+id/registerChildGuardianCNIC_TV"

            android:textSize="25dp"
            android:gravity="right|center"
            android:layout_gravity="right|center_horizontal"
            />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/registerChildGuardianCNIC"
        android:layout_gravity="center_horizontal"
        android:hint=""

        android:background="@android:color/transparent"
        android:singleLine="true"


        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_weight=".10"
        android:paddingLeft="16dp" />



</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"

        >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/registerChildGuardianMobileNumber"
        android:layout_gravity="center_horizontal"
        android:hint=""
        android:inputType="phone"
        android:background="@android:color/transparent"
        android:singleLine="true"

        android:layout_toLeftOf="@+id/registerChildGuardianMobileNumber_TV"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"

        android:layout_weight=".10"
        android:paddingLeft="16dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="رپرست کا موبائل نمبر"
        android:layout_alignParentRight="true"
        android:id="@+id/registerChildGuardianMobileNumber_TV"

        android:textSize="25dp"
        android:gravity="right|center"
        android:layout_gravity="right|center_horizontal"
        />

</RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:layout_weight=".05"
        android:textColor="@color/white"
        android:text="Tasweer Khenchiyay"
        android:id="@+id/registerChildTakePicture" />


</LinearLayout>
