<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="16dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        tools:context="com.ipal.itu.harzindagi.Activities.RegisterChildActivity"
        tools:showIn="@layout/activity_register_child">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height">

            <EditText
                android:id="@+id/registerChildUCNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left|center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/registerChildUCNumber_TV"

                android:inputType="number"
                android:nextFocusDown="@+id/registerChildEPICenterName"
                android:paddingLeft="16dp"
                android:singleLine="true" />


            <TextView
                android:id="@+id/registerChildUCNumber_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="ای پی آئی نمبر"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height">

            <EditText
                android:id="@+id/registerChildEPICenterName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left|center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/registerChildEPICenterName_TV"
                android:layout_weight=".10"
                android:hint=""
                android:inputType="textCapWords"
                android:paddingLeft="16dp"
                android:singleLine="true" />

            <TextView

                android:id="@+id/registerChildEPICenterName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="سینٹر کا نام"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >

            <EditText
                android:id="@+id/registerChildName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/registerChildName_TV"
                android:layout_weight=".10"

                android:gravity="left|center"

                android:hint=""

                android:inputType="textCapWords"
                android:paddingLeft="16dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/registerChildName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="بچے کا نام"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/registerChildSexMale"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/registerbuttonborder"
                android:text="لڑکا"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <Button
                android:id="@+id/registerChildSexFemale"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/registerbuttonborder"
                android:focusable="false"
                android:text="لڑکی"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >

            <TextView
                android:id="@+id/registerChildDOB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:gravity="center|right"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:text="تاریخ پیدائش"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/registerChildDOBText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="DD/MM/YYYY"

                android:textColor="@android:color/darker_gray"
                android:textSize="20dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >

            <EditText
                android:id="@+id/registerChildMotherName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/registerChildMotherName_TV"
                android:layout_weight=".10"

                android:hint=""

                android:inputType="textCapWords"

                android:paddingLeft="16dp"
                android:singleLine="true" />

            <TextView

                android:id="@+id/registerChildMotherName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="والدہ کا نام"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >

            <EditText
                android:id="@+id/registerChildGuardianName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/registerChildGuardianName_TV"
                android:layout_weight=".10"

                android:hint=""

                android:inputType="textCapWords"

                android:paddingLeft="16dp"
                android:singleLine="true" />


            <TextView

                android:id="@+id/registerChildGuardianName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="سرپرست کا نام"
                android:textColor="@android:color/black"
                android:textSize="20dp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView

                android:id="@+id/registerChildGuardianCNIC_TV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"

                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="سرپرست کا شناختی کارڈ کا نمبر"
                android:textColor="@android:color/black"
                android:textSize="20dp" />


            <com.ipal.itu.harzindagi.CustomeViews.MaskedEditText
                android:id="@+id/registerChildGuardianCNIC"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_weight=".10"
                android:hint="#####-########-#"
                mask:mask="#####-########-#"
                android:inputType = "number"
                android:numeric = "decimal"
                android:paddingLeft="16dp"
                android:singleLine="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/registerChildGuardianMobileNumber_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="سرپرست کا موبائل نمبر"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <com.ipal.itu.harzindagi.CustomeViews.MaskedEditText
                android:id="@+id/registerChildGuardianMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionDone"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:hint="03##-#######"
                mask:mask="####-#######"
                android:inputType = "number"
                android:numeric = "decimal"
                android:paddingLeft="16dp"
                android:singleLine="true" />
        </LinearLayout>


        <Button
            android:id="@+id/registerChildTakePicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:background="@drawable/roundbutton"
            android:text="تصویر کھینچنا"
            android:textSize="20dp"
            android:textColor="@color/white" />


    </LinearLayout>
</ScrollView>