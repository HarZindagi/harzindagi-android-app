<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/scrollViewR"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ipal.itu.harzindagi.Activities.RegisterChildActivity"
    tools:showIn="@layout/activity_register_child">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <EditText
                android:id="@+id/registerboodid"
                android:layout_width="@dimen/text_wed"
                android:layout_height="@dimen/text_he"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left|center_horizontal"
                android:layout_marginRight="15dp"
                android:background="@drawable/border_black"
                android:inputType="number"
                android:nextFocusDown="@+id/registerChildEPICenterName"
                android:paddingLeft="5dp"
                android:singleLine="true"

                android:textSize="@dimen/edit_text_size" />


            <TextView
                android:id="@+id/registerboodidtext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text=" کتاب کا نمبر"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height">

            <TextView

                android:id="@+id/registerChildEPICenterName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="سینٹر کا نام"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/registerChildEPICenterName"
                android:layout_width="@dimen/text_wed"
                android:layout_height="@dimen/text_he"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|center_horizontal"
                android:layout_weight=".10"

                android:background="@drawable/border_black"
                android:hint=""
                android:inputType="textCapWords"
                android:nextFocusDown="@+id/registerChildTown_ET"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textSize="@dimen/edit_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >


            <TextView
                android:id="@+id/registerChildTown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"

                android:text="علاقے کانام"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatMultiAutoCompleteTextView
                android:id="@+id/registerChildTown_ET"
                android:layout_width="@dimen/text_wed"
                android:layout_height="@dimen/text_he"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_black"
                android:imeOptions="actionDone"
                android:nextFocusDown="@+id/registerChildAddress"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textSize="@dimen/edit_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >


            <TextView
                android:id="@+id/registerChildAddressTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"

                android:text=" گھر کا پتہ"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/registerChildAddress"
                android:layout_width="@dimen/text_wed"
                android:layout_height="@dimen/text_he"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_black"
                android:imeOptions="actionDone"
                android:nextFocusDown="@+id/registerChildEPINumber"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textSize="@dimen/edit_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                android:id="@+id/registerChildUCNumber_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="ای پی آئی نمبر"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/registerChildEPINumber"
                android:layout_width="@dimen/text_wed"
                android:layout_height="@dimen/text_he"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|center_horizontal"
                android:background="@drawable/border_black"
                android:inputType="number"
                android:nextFocusDown="@+id/registerChildName"

                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textSize="@dimen/edit_text_size" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >

            <android.support.v7.widget.AppCompatMultiAutoCompleteTextView
                android:id="@+id/registerChildName"
                android:layout_width="@dimen/text_wed"
                android:layout_height="@dimen/text_he"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_weight=".10"
                android:background="@drawable/edit_text_border"
                android:gravity="left|center"
                android:hint=""
                android:inputType="textCapWords"
                android:nextFocusDown="@+id/registerChildGuardianName"
                android:paddingLeft="5dp"
                android:singleLine="true"

                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/edit_text_size" />

            <TextView
                android:id="@+id/registerChildName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="بچے کا نام"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <Button
                android:id="@+id/registerChildSexMale"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"

                android:background="@drawable/registerbuttonborder"
                android:text="لڑکا"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <Button
                android:id="@+id/registerChildSexFemale"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/registerbuttonborder"
                android:focusable="false"
                android:text="لڑکی"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >

            <TextView
                android:id="@+id/registerChildDOB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:gravity="center|right"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:text="تاریخ   پیدائش"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="6dp"

                android:gravity="center"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:buttonTint="@color/colorPrimary"
                    android:text="لڑکی"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:text="لڑکا"

                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp" />
            </RadioGroup>

            <TextView

                android:id="@+id/registerChildDOBText"
                android:layout_width="110dp"
                android:layout_height="@dimen/text_he"
                android:layout_marginLeft="14dp"

                android:layout_toRightOf="@+id/radioGroup"
                android:background="@drawable/edit_text_border"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="DD/MM/YYYY"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >


            <TextView

                android:id="@+id/registerChildGuardianName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="سرپرست کا نام"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatMultiAutoCompleteTextView
                android:id="@+id/registerChildGuardianName"
                android:layout_width="@dimen/text_wed"
                android:layout_height="@dimen/text_he"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".10"
                android:background="@drawable/edit_text_border"

                android:hint=""
                android:inputType="textCapWords"
                android:nextFocusDown="@+id/registerChildGuardianMobileNumber"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/edit_text_size" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >


            <TextView
                android:id="@+id/registerChildGuardianMobileNumber_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="موبائل نمبر"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/yaTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:gravity="center"

                android:text="یا"
                android:textColor="@color/colorPrimary"
                android:textSize="22dp" />

            <com.ipal.itu.harzindagi.CustomeViews.MaskedEditText
                android:id="@+id/registerChildGuardianMobileNumber"
                android:layout_width="200dp"
                android:layout_height="@dimen/text_he"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@+id/yaTV"
                android:background="@drawable/edit_text_border"
                android:hint="####-#######"
                android:inputType="number"
                android:nextFocusDown="@+id/registerChildGuardianCNIC"
                android:numeric="decimal"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/edit_text_size"
                mask:mask="####-#######" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"

            >


            <TextView

                android:id="@+id/registerChildGuardianCNIC_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="شناختی کارڈ نمبر"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <com.ipal.itu.harzindagi.CustomeViews.MaskedEditText
                android:id="@+id/registerChildGuardianCNIC"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"

                android:background="@drawable/edit_text_border"
                android:hint="#####-#######-#"
                android:inputType="number"
                android:numeric="decimal"
                android:paddingLeft="5dp"
                android:singleLine="true"

                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/edit_text_size"
                mask:mask="#####-#######-#" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:visibility="gone"

            >

            <android.support.v7.widget.AppCompatMultiAutoCompleteTextView
                android:id="@+id/registerChildMotherName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/registerChildMotherName_TV"
                android:layout_weight=".10"
                android:hint=""
                android:inputType="textCapWords"
                android:nextFocusDown="@+id/registerChildAddress"
                android:singleLine="true" />

            <TextView

                android:id="@+id/registerChildMotherName_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_horizontal"
                android:gravity="right|center"
                android:text="والدہ کا نام"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

        </RelativeLayout>
        <com.andexert.library.RippleView
            android:id="@+id/registerChildTakePictureR"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:rv_color="@color/rp_color"
            app:rv_rippleDuration="@integer/rp_duration"
            app:rv_zoom="true">

        <Button
            android:id="@+id/registerChildTakePicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/roundbutton"
            android:drawableLeft="@drawable/camera_thumb"
            android:padding="10dp"
            android:text="تصویر کھینچیں"
            android:textColor="@color/white"
            android:textSize="20dp" />
        </com.andexert.library.RippleView>
        <Button
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbutton"
            android:text="Text DataBase"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="gone" />


    </LinearLayout>
</ScrollView>