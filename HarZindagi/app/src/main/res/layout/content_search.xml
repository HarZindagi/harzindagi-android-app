<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ipal.itu.harzindagi.Activities.SearchActivity"
    tools:showIn="@layout/activity_search"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height_2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" مندرجہ ذیل معلومات فراہم کریں۔"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_weight=".08"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorAccent" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="@dimen/textview_height"

        >

        <EditText
            android:id="@+id/searchActivityChildID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:inputType="textCapWords"
            android:layout_toLeftOf="@+id/searchActivityChildID_TV"

            android:layout_weight=".10"

            android:hint=""

            android:paddingLeft="16dp"
            android:singleLine="true" />


        <TextView

            android:id="@+id/searchActivityChildID_TV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_horizontal"
            android:textColor="@android:color/black"
            android:gravity="right|center"
            android:text="بچے کی ID"
            android:textSize="20dp" />


    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/searchActivityCellPhone_TV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_horizontal"
            android:gravity="right|center"
            android:text="رپرست کا موبائل نمبر"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/searchActivityCellPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:hint="03##-#######"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView

            android:id="@+id/searchActivityCNIC_TV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            android:layout_gravity="right|center_horizontal"
            android:textColor="@android:color/black"
            android:gravity="right|center"
            android:text="سرپرست کا شناختی کارڈ کا نمبر"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/searchActivityCNIC"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:layout_weight=".10"

            android:hint="#####-########-#"
            android:inputType="number"
            android:paddingLeft="16dp"
            android:singleLine="true" />
    </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"

        >

        <EditText
            android:id="@+id/searchActivityChildName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:inputType="textCapWords"
            android:layout_toLeftOf="@+id/searchActivityChildName_TV"

            android:layout_weight=".10"

            android:gravity="left|center"

            android:hint=""
            android:paddingLeft="16dp"
            android:singleLine="true" />

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/searchActivityChildName_TV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_horizontal"
            android:gravity="right|center"
            android:text="بچے کا نام"
            android:textSize="20dp" />

    </RelativeLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"

        >

        <EditText
            android:id="@+id/searchActivityGuardianName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:inputType="textCapWords"
            android:layout_toLeftOf="@+id/searchActivityGuardianName_TV"

            android:layout_weight=".10"

            android:hint=""

            android:paddingLeft="16dp"
            android:singleLine="true" />


        <TextView

            android:id="@+id/searchActivityGuardianName_TV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_horizontal"
            android:textColor="@android:color/black"
            android:gravity="right|center"
            android:text="سرپرست کا نام"
            android:textSize="20dp" />


    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تلاش کریں"
        android:id="@+id/searchActivitySearchButton"
        android:background="@drawable/roundbutton"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="25dp" />


</LinearLayout>
