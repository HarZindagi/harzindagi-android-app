<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ipal.itu.harzindagi.Activities.SearchActivity"
    tools:showIn="@layout/activity_search"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter any of the Following Information:"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_weight=".08"
        android:gravity="center_vertical"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/searchActivityCellPhone"
        android:layout_gravity="center_horizontal"
        android:hint="Cell Phone #"
        android:background="@android:color/transparent"
        android:layout_weight=".16"
        android:paddingLeft="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/searchActivityCNIC"
        android:layout_gravity="center_horizontal"
        android:hint="CNIC#"
        android:background="@android:color/transparent"
        android:layout_weight=".16"
        android:paddingLeft="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:id="@+id/searchActivityChildName"
        android:hint="Child Name"
        android:inputType="textPersonName"
        android:background="@android:color/transparent"
        android:layout_weight=".16"
        android:paddingLeft="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/searchActivityGuardianName"
        android:layout_gravity="center_horizontal"
        android:hint="Guardian Name"
        android:background="@android:color/transparent"
        android:layout_weight=".16"
        android:paddingLeft="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Karein"
        android:id="@+id/searchActivitySearchButton"
        android:background="@drawable/roundbutton"
        android:textColor="@color/white"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="25dp" />


</LinearLayout>
