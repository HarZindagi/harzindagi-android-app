<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ipal.itu.harzindagi.Fragments.VaccinationOneFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"

        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/list_v1"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical"></LinearLayout>

        <View
            android:id="@+id/v1_sp1"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@android:color/darker_gray"
            android:visibility="invisible" />
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:id="@+id/skip_visit">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:weightSum="100">

         <TextView

             android:id="@+id/date_vac"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:hint="DD-MM-YYYY"
             android:layout_weight="30"
             android:gravity="center"
             android:layout_marginLeft="5dp"
             android:visibility="invisible"
             android:textColor="#4d4d4d"
             android:textSize="16dp"
             />
         <CheckBox
             android:id="@+id/dont_care"
             android:button="@null"
             android:layout_weight="70"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="بچے کو حفاظتی ٹیکہ لگ چکا ہے"
             android:textSize="15sp"
             android:gravity="right|center_vertical"
             android:textStyle="bold"
             android:layout_alignParentRight="true"
             android:visibility="visible"
             android:drawableRight="@drawable/customdrawablecheckboxnxt"
             android:textColor="#4d4d4d"

             />
     </LinearLayout>
     <Button
         android:id="@+id/nxt_tab"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="آگے جائیں"
         android:background="@color/Button_Theme_color"
         android:layout_gravity="center_horizontal"
         android:textColor="@color/white"
         android:textSize="22sp"
         android:visibility="gone"/>
 </LinearLayout>

        <Button
            android:id="@+id/btn_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/Button_Theme_color"
            android:onClick="Take_Vaccine_Picture"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:text="تصویر کھینچیں"
            android:textColor="@color/white"
            android:textSize="22sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/dimmLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#77777777"
        android:orientation="vertical"
        android:visibility="gone">


    </LinearLayout>
</RelativeLayout>
